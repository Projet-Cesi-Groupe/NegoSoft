@using NegoSoftWeb.Models.Entities
@model List<CartItem>

<div class="container mt-5">
    <h1>Your Cart</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProName</td>
                    <td>@item.ProQuantity</td>
                    <td>@item.ProPrice $</td>
                    <td>@Math.Round((item.ProQuantity * item.ProPrice),2) $</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.ProId" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-right">
        <h3>Total: @Math.Round(Model.Sum(item => item.ProQuantity * item.ProPrice),2) $</h3>
    </div>
    <div class="text-right mt-4">
        <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">
            Suivant : Informations Client
        </a>
    </div>
</div>