<Window x:Class="NegoSoftWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NegoSoftWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="894" Width="1720">
    <Grid>
        <Grid.RowDefinitions>
            <!-- First row is for the Menu (Auto height means it will take only as much space as needed) -->
            <RowDefinition Height="Auto" />
            <!-- Second row is for the DataGrid (Star height means it will take the remaining space) -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="20" Grid.Row="0">
            <MenuItem Header="Produits" Click="MenuItem_Produits"/>
            <MenuItem Header="Clients" Click="MenuItem_Clients"/>
            <MenuItem Header="Fournisseurs" Click="MenuItem_Fournisseurs"/>
            <MenuItem Header="Commandes" Click="MenuItem_Commandes"/>
        </Menu>
        <DataGrid x:Name="dataTab" Grid.Row="1" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        
        
    </Grid>
    
</Window>
