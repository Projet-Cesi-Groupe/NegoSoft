<Window x:Class="NegoSoftWPF.WPFViews.CreateCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NegoSud -- Création client" Height="400" Width="300"
        Icon="/WPFViews/images/vin.ico"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Prénom:" Margin="0,0,0,5"/>
            <TextBox x:Name="FirstNameTextBox" Width="200" />

            <TextBlock Text="Nom:" Margin="0,10,0,5"/>
            <TextBox x:Name="LastNameTextBox" Width="200" />

            <TextBlock Text="Email:" Margin="0,10,0,5"/>
            <TextBox x:Name="EmailTextBox" Width="200" />

            <TextBlock Text="Téléphone:" Margin="0,10,0,5"/>
            <TextBox x:Name="PhoneTextBox" Width="200" />

            <TextBlock Text="Utilisateur:" Margin="0,10,0,5"/>
            <ComboBox x:Name="UserIdComboBox" Width="200" />

            <Button Content="Créer" Width="100" Height="30" Margin="0,20,0,0" Click="CreateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
