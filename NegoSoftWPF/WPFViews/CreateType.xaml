<Window x:Class="NegoSoftWPF.WPFViews.CreateType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NegoSud -- Création Famille Produit" Height="260" Width="280"
        Icon="/WPFViews/images/vin.ico" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundColor}">
    <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="4" Padding="20">
        <Grid Margin="10" Background="{StaticResource MenuBackgroundColor}">
            <StackPanel>
                <Label Content="Libelle de la Famille" Margin="0,0,0,5" FontWeight="Bold" Foreground="{StaticResource TextColor}" HorizontalAlignment="Center"/>
                <TextBox x:Name="TypeLibelleTextBox" Width="200" />
                
                <Button Content="Créer" Width="100" Height="30" Margin="0,20,0,0" 
                    Click="CreateButton_Click" 
                    Style="{StaticResource RoundedButtonStyle}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
